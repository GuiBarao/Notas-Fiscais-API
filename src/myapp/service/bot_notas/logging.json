{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "default": {
            "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
            "datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },
    "handlers": {
        "fileHandlerMyApp": {
            "class": "logging.FileHandler",
            "formatter": "default",
            "filename": "myapp.log",
            "mode": "a"
        },
        "fileHandlerLibraries": {
            "class": "logging.FileHandler",
            "formatter": "default",
            "filename": "libraries.log",
            "mode": "a"
        }
    },
    "loggers": {
        "": {
            "level": "DEBUG",
            "handlers": ["fileHandlerMyApp"],
            "propagate": false
        },
        "selenium": {
            "level": "DEBUG",
            "handlers": ["fileHandlerLibraries"],
            "propagate": false
        },
        "other_library": { 
            "level": "DEBUG",
            "handlers": ["fileHandlerLibraries"],
            "propagate": false
        }
    }
}
